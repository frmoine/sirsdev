<fx:root fx:id="uiBorderPane" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox spacing="50.0" BorderPane.alignment="CENTER">
         <children>

<!-- FORM WHICH WILL CONTAIN ALL SIMPLE EDITORS -->
            <!-- Utilisateur -->
             <GridPane hgap="10.0" styleClass="gray-light" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="ALWAYS" />
              </columnConstraints>
              <!--rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints-->
               <children>
                  <!-- EString -->                 
                  <Label fx:id="ui_labelLogin" text="%login" GridPane.rowIndex="0" />
                  <TextField fx:id="ui_login" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <!-- EString -->                 
                  <Label text="%role" GridPane.rowIndex="1" />
                  <ComboBox fx:id="ui_role" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="%changePassword" GridPane.rowIndex="2" />
                  <CheckBox fx:id="ui_passwordChange" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <!-- EString -->                 
                  <Label text="%password" GridPane.rowIndex="3" />
                  <PasswordField fx:id="ui_password" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label fx:id="ui_labelConfirm" text="%confirm" GridPane.rowIndex="4" />
                  <PasswordField fx:id="ui_passwordConfirm" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>


         </children>
         <padding>
            <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</fx:root>
